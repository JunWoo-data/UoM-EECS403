{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Debug Project",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "build debug executable",
            "program": "${workspaceFolder}/hunt_debug",
            "stdio": [
                null, // redirect stdin
                null, // redirect stdout
                null // redirect stderr
            ],
            "args": ["-v", "-s", "-p", "M", "<", "test-2-vspM.txt"],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "postDebugTask": "clean workspace"
        },
    ]
}